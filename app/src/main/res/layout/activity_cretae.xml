<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/colourtrs"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <TextView

        android:id="@+id/TextviewNameId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What's your name"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="80dp"
        android:textSize="20sp"
        android:textColor="#000000"
        android:textStyle="bold"

        />

    <EditText
        android:id="@+id/Edittext3Id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        android:layout_margin="20dp"
        android:inputType="text"
        android:hint="@string/edittext3"
        android:backgroundTint="#699BFF"
        />

    <EditText
        android:id="@+id/Edittext4Id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:backgroundTint="#699BFF"
        android:hint="@string/edittext4"

        />

    <ImageButton
        android:id="@+id/logButton2id"
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="#699BFF"
        android:src="@drawable/next_icon"



        />

</LinearLayout>