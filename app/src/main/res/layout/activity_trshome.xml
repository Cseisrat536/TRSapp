<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:weightSum="2"
    tools:context=".TRShome">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"

        >

        <ImageView
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/trsone"

            />

        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home1"
            android:textSize="20sp"
            android:textColor="#050505"
            android:textStyle="bold"
            android:paddingTop="10dp"

            />
        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="800 tk/per room"
            android:textSize="18sp"
            android:textColor="#050505"
            android:paddingTop="10dp"


            />

        <RatingBar
            android:layout_weight="1"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:numStars="5"
            android:progressTint="@color/colour_back"
            android:rating="2"
            android:stepSize="0.5"


            />


    </LinearLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"


        >

        <ImageView
            android:layout_weight="1"
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:src="@drawable/trstwo"
            android:scaleType="fitXY"

            />
        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home2"
            android:textSize="20sp"
            android:textColor="#050505"
            android:textStyle="bold"
            android:paddingTop="10dp"


            />
        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="500 tk/per room"
            android:textSize="18sp"
            android:textColor="#050505"
            android:paddingTop="10dp"

            />

        <RatingBar
            android:layout_weight="1"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:numStars="5"
            android:rating="1"
            android:stepSize="0.5"
            android:progressTint="@color/colour_back"


            />




    </LinearLayout>

</LinearLayout>